<body>
    <div class="banner_one"></div>
    @Html.Partial("UserCenterNav", 3)
    <div class="content">
        <div class="car_process"></div>
        <div class="u-tit part" style="text-indent:12px; line-height:60px;">
            <span class="u-tt-md">订单信息</span>
        </div>
        <div class="ordertable part">
            <table class="u-tabx new_tabx add_new_tx extb" style="width:100%;">
                <thead class="add_bc_nonex">
                    <tr class="odd add">
                        <th width="35%" class="add_l_p35">课程卡类型</th>
                        <th width="25%">套餐详情</th>
                        <th width="26%">购买数量</th>
                        <th>单价</th>
                    </tr>
                </thead>
                <tbody>
                    @Html.Raw(ViewBag.OrderDetails)
                </tbody>
            </table>
        </div>
        <div class="bill f-tar part">
            <div class="f-fs2" style="color:#000;">
                课程卡总数<b style="color:#f00">&nbsp;@ViewBag.Count&nbsp;</b>张&nbsp;&nbsp;&nbsp;
                金额总计：<b><i class="f-ff1">¥</i><font id="total" style="color:#f00">@ViewBag.Price</font></b>
            </div>
        </div>
        <div class="u-tit part pay">
            <ul class="uls" style="padding: 30px 250px;">
                <li class="icon weixin" title="weixin" style="width:100px;height:100px;">
                    <div class="pay_normal">
                        <input name="payMethod" checked="checked" value="weixin" type="radio" style="margin-top:32px;float:left;" />
                        <img src="~/assets/image/weixin-pay.png" height="80" width="80" style="float:left;margin-left:3px;" />
                    </div>
                </li>
                <li class="icon alipay" title="alipay" style="width:100px;height:100px;">
                    <div class="pay_normal selector">
                        <input name="payMethod" value="alipay" type="radio" style="margin-top:32px; float:left;" />
                        <img src="~/assets/image/alipay.jpg" height="80" width="80" style="float:left;margin-left:3px;" />
                    </div>
                </li>
                <li class="icon unionpay" title="unionpay" style="width:140px;height:100px;">
                    <div class="pay_normal">
                        <input name="payMethod" value="unionpay" type="radio" style="margin-top:32px;float:left;" />
                        <img src="~/assets/image/unionpay.png" height="80" width="120" style="float:left;margin-left:3px;" />
                    </div>
                </li>
            </ul>
            <div style="text-indent:12px; line-height:60px;margin-top: 70px;text-align: center;">
                <span class="u-tt-md">支付方式</span>
            </div>
        </div>


