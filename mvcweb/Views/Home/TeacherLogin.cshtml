<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="ABC,English online," />
    <meta name="description" content="ABC English Online Education Platform, ABC在线英语" />
    <title>ABC Online</title>
    <link href="~/assets/css/common.css" rel="stylesheet"/>
    <link href="~/assets/css/login.css" rel="stylesheet" />
    <link href="~/assets/css/StyleSheet1.css" rel="stylesheet" />
</head>
<body>
    <div id="login" style="margin-top: 50px;">
        @*<div>
            <img class="logo" src="~/image/login/logo.png" />
        </div>*@
        <div class="login login-popup">
            <div id="Form1" class="login_form">
                <div class="text-center">
                    Teacher Login
                </div>
                <div class="mask-input">
                    <input id="login_name" name="UserName" type="text" placeholder="please enter your name" />
                </div>
                <div class="mask-input">
                    <input id="login_pwd" type="password" placeholder="please enter your password" />
                </div>
                <div class="mask-input">
                    <div class="frt">
                        <input id="login_auto" class="autologin" type="checkbox" />
                        <label for="login_auto">Auto Login</label>
                    </div>
                </div>
                <button method="login" id="login_btn" class="mask-input" style="width:300px;">Login</button>
                <div class="mask-input">
                    <a style="color: #c7151d" href="javascript:searchPassword();">Forget password?</a>
                </div>
            </div>
            <div style="margin: 0 auto; text-align: center;text-align: center;padding-top: 15px;">
                Not a member？<a id="login_register" style="color: #c7151d">register</a>
            </div>
        </div>

    </div>
    <div class="mask searchPassword hidden layui-layer-wrap  login-popup " style=" display:none; padding:30px 30px;">
        <div style="display: block; padding: 30px; margin: auto;">
            <img src="~/Content/image/logo.png" style="margin: auto; display: block;">
        </div>
        <div class="login_form">
            <div style="width: 100%; height: 10px"></div>
            <div class="mask-input">
                <input type="text" name="UserName" placeholder="please enter your phone number">
            </div>
            <div class="mask-input">
                <input type="password" name="Pwd" placeholder="Set a new password">
            </div>
            <div class="mask-input">
                <input type="password" name="Pwd" placeholder="Please enter your password again">
            </div>
            <div class="mask-input">
                <input type="text" name="Validate" style="padding-left: 10px; float: left; height: 40px; width: 250px; border: 1px solid #ddd;" placeholder="Please entry the sms verification code">
                <button method="sendValid" data="2" style="width: 150px; height: 40px;">Verification code</button>
            </div>
            <button method="modifyPassword">Modify password</button>
        </div>

    </div>
    <script src="@ViewBag.Path/js/jquery-1.8.3.min.js"></script>
    <script src="@ViewBag.Path/js/base.js"></script>
    <script src="@ViewBag.Path/js/jquery.cookie.js"></script>
    <script src="@ViewBag.Path/js/layer/layer.js"></script>
    <script src="@ViewBag.Path/js/common.js"></script>
    <script src="@ViewBag.Path/js/teacherlogin.js"></script>
    @*<script src="@ViewBag.Path/js/nav.js"></script>*@
</body>
</html>





