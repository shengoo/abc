<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>ABC在线英语</title>
    <link href="~/static/css/PurchaseTh.css" rel="stylesheet" />
    <link href="~/assets/css/common.css" rel="stylesheet" />
    <style>
        .section .ad-1 .free-course .each-media .extb tr {
            display: table-row;
        }

        .hidden {
            display: none;
        }

        .btntiny {
            color: blue;
            cursor: pointer;
        }

        .nav-tabs {
            list-style-type: none;
            height: 40px;
            padding: 0;
            /* background-color: #f5f5f5; */
            background: rgba(0, 0, 0, 0) -moz-linear-gradient(center top, #f6f6f6, #f0f0f0) repeat scroll 0 0;
        }

            .nav-tabs li {
                float: left;
                /* border: 1px solid #ddd; */
                margin-right: 5px;
                height: 40px;
                min-width: 123px;
                text-align: center;
                padding: 0 13px;
                line-height: 40px;
                border-bottom: 0;
                cursor: pointer;
                color: #666666;
            }

            .nav-tabs .focus {
                background-color: #3396D9;
                color: #fff;
            }

        .order-list {
            margin-top: 5px;
            width: 100%;
            height: 440px;
            /* border: 1px solid #ddd; */
        }

        .evaluate_item .evaluate_photo img {
            width: 48px;
            height: 48px;
            margin: 6px;
        }
    </style>
</head>
<body>
    <div class="banner_one"></div>
    @Html.Partial("UserCenterNav", 2)
    <div class="slider">
        <div class="slider-box">
            <div class="slider-one">
                <span class="close">X</span>
            </div>
            <div class="slider-two">
                <ul class="teacher-type">
                    <li class="play-btn active">课次</li>
                    <li class="play-btn">教师评语</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="section">
        <div class="ad ad-1">
            <div class="container">
                <div class="page-title">
                    <h1>COURSE MANAGEMENT</h1>
                    <div class="divider"></div>
                    @Html.Partial("PurchaseTabs", new ViewDataDictionary { { "index", 3 } })
                </div>
                <div class="free-course myevaluate">
                    <div class="each-media courselist_table_container">
                        <table class="extb">
                            <colgroup>
                                <col width="15%" />
                                <col width="13%" />
                                <col width="15%" />
                                <col width="12%" />
                                <col width="10%" />
                                <col width="20%" />
                            </colgroup>
                            <thead>
                                <tr class="odd add">
                                    <td>课程类型</td>
                                    <td>课程级别</td>
                                    <td>课程名称</td>
                                    <td>上课方式</td>
                                    <td>进度</td>
                                    <td>查看评价</td>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>

                    <div class="each-media classhour hidden">
                        <table class="course_yueke extb">
                            <thead>
                                <tr class="odd add">
                                    <td>课次</td>
                                    <td style="width: 113px;">上课老师</td>
                                    <td style="width: 113px;">学管师</td>
                                    <td>已约/可约</td>
                                    <td>上课时间</td>
                                    <td>时长</td>
                                    <td>状态</td>
                                    <td>操作</td>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                        <div class="page hidden"></div>
                    </div>
                    <div class="each-media orderlist hidden">
                        <div style="width: 100%; height: 35px;">
                            <ul class="nav-tabs">
                                <li data="0">学员评价</li>
                                <li data="1">教师评语</li>
                            </ul>
                        </div>
                        <div class="order-list" style="height: 300px">
                        </div>
                        <div style="width: 100%; height: 60px;">
                            <div class="page"></div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>


    <script src="~/js/jquery-1.8.3.min.js"></script>
    <script src="~/js/base.js"></script>
    <script src="~/js/jquery.cookie.js"></script>
    <script src="~/js/layer/layer.js"></script>
    <script src="~/js/common.js"></script>
    <script src="~/js/member.js" type="text/javascript"></script>
    <script>
        $(function () {
            window.top.$('#ContentFrame').css({
                height: 1400
            });
            member.myEvaluateReady();
        });
    </script>
</body>
</html>
