</head>
<body>
    <div class="banner"></div>
    @Html.Partial("AdultNav", 0)

    <div class="section">
        <div class="container">
            <h1 class="title">我们的优势及特色</h1>
            <h2 class="sub-text" style="text-transform: uppercase;">CURRICULUM ADVANTAGE</h2>
            <div class="divider"></div>
            <div class="advantage">
